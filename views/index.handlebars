<main>
    <div class="container">
        <div class="jumbotron">
            <h1>Let's Eat Some Burgers! <img src="../assets/img/burger.png"></h1>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading" id="notDevoured"><strong>Burgers to Eat</strong></div>
                    <div class="panel-body">
                        <ul>
                            {{#each burgers}}
                            {{#unless devoured}}
                            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                            <button type="button" class="eatburger btn btn-warning" id="devourMe" data-id="{{this.id}}"
                                data-newDevoured="{{devour}}"><i class="fas fa-utensils"></i></button>
                            <hr>
                            {{/unless}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading" id="devoured"><strong>Burgers You've Devoured</strong></div>
                    <div class="panel-body">
                        <ul>
                            {{#each burgers}}
                            {{#if devoured}}
                            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                            <button type="button" class="trashburger btn btn-danger" id="trashbutton"
                                data-id="{{this.id}}" data-newDevoured="{{devour}}"><i
                                    class="far fa-trash-alt"></i></button>
                            <hr>
                            {{/if}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <h2>Add a New Burger</h2>

        <div class="row">
            <div class="col-sm-12">
                <form class="create-form">
                    <div class="form-group">
                        <label for="newBurger">New Burger Name:</label>
                        <input type="text" id="newBurger" name="burger" placeholder="Enter new burger!">
                        <button id="addBurger" type="submit" class="btn btn-success">Add Your Burger</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>